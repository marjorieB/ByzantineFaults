<?xml version='1.0'?>
<!DOCTYPE platform SYSTEM "http://simgrid.gforge.inria.fr/simgrid.dtd">
<platform version="3">

	<process host="primary0" function="primary">
		<argument value="0"/> <!-- id of the primary -->
		<argument value="1"/> <!-- number of clients -->
	</process>

	<process host="client0" function="client">
		<argument value="0"/> <!-- id of the client -->
		<argument value="primary-0"/> <!-- name of the primary -->
	</process>

	<process host="worker0" function="worker">
		<argument value="0"/> <!-- id of the worker -->
		<argument value="0"/> <!-- number of the workers used for the global table -->
		<argument value="primary-0"/> <!-- name of the primary -->
		<argument value="0"/> <!-- value of the reputation -->
	</process>
	<process host="worker1" function="worker">
		<argument value="1"/> <!-- id of the worker -->
		<argument value="1"/> <!-- number of the workers used for the global table -->
		<argument value="primary-0"/> <!-- name of the primary -->
		<argument value="1"/> <!-- value of the reputation -->
	</process>
</platform>
