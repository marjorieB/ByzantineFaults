<?xml version='1.0'?>
<!DOCTYPE platform SYSTEM "http://simgrid.gforge.inria.fr/simgrid.dtd">
<platform version="3">

	<config id="general">
		 <prop id="network/model" value="LV08"/>
	</config>
	<AS id="AS0" routing="Full">

		<host id="primary" power="2000000000"/>

		<host id="client0" power="2000000000"/>
		<host id="client1" power="2000000000"/>
		<host id="client2" power="2000000000"/>

		<host id="worker0" power="2000000000"/>
		<host id="worker1" power="2000000000"/>
		<host id="worker2" power="2000000000"/>

		<link id="link0" bandwidth="7.24MBps" latency="0.004"/>
		<link id="link1" bandwidth="7.24MBps" latency="0.004"/>
		<link id="link2" bandwidth="7.24MBps" latency="0.004"/>
		<link id="link3" bandwidth="7.24MBps" latency="0.004"/>
		<link id="link4" bandwidth="7.24MBps" latency="0.004"/>
		<link id="link5" bandwidth="7.24MBps" latency="0.004"/>

		<route src="client0" dst="primary" symmetrical="YES">
			<link_ctn id="link0"/>
		</route>
		<route src="client1" dst="primary" symmetrical="YES">
			<link_ctn id="link1"/>
		</route>
		<route src="client2" dst="primary" symmetrical="YES">
			<link_ctn id="link2"/>
		</route>

		<route src="worker0" dst="primary" symmetrical="YES">
			<link_ctn id="link3"/>
		</route>
		<route src="worker1" dst="primary" symmetrical="YES">
			<link_ctn id="link4"/>
		</route>
		<route src="worker2" dst="primary" symmetrical="YES">
			<link_ctn id="link5"/>
		</route>
	</AS>
</platform>
